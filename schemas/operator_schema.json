{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CMF Operator Schema",
  "type": "object",

  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this operator."
    },

    "operator_type": {
      "type": "string",
      "description": "The category or class of operator."
    },

    "inputs": {
      "type": "array",
      "description": "List of required input fields for this operator.",
      "items": { "type": "string" }
    },

    "outputs": {
      "type": "array",
      "description": "List of output fields produced by this operator.",
      "items": { "type": "string" }
    },

    "metadata": {
      "type": "object",
      "description": "Human-readable metadata about the operator.",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  },

  "required": ["id", "operator_type"]
}

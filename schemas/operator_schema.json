{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Coherence Mapping Framework (CMF) Schema",
  "type": "object",

  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this CMF object."
    },

    "type": {
      "type": "string",
      "description": "The CMF object type (e.g., node, operator, field, mapping)."
    },

    "metadata": {
      "type": "object",
      "description": "Human-readable metadata about the object.",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" }
      }
    },

    "structure": {
      "type": "object",
      "description": "The structural content of the CMF object. This will be expanded later."
    }
  },

  "required": ["id", "type"]
}
